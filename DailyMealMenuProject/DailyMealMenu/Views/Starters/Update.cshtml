@* Views/Starters/Update.cshtml *@
@model DailyMealMenu.Models.Starter
@{
    ViewData["Title"] = "Başlangıç – Düzenle";
}
<h2>Başlangıç – Düzenle</h2>
<hr />

<form asp-action="Update" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="Ingredients"></label>
        <input asp-for="Ingredients" class="form-control" />
        <span asp-validation-for="Ingredients" class="text-danger"></span>
    </div>

    <!-- Mevcut görsel -->
    <div class="mb-2">
        <label class="form-label">Mevcut Görsel</label><br />
        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" style="max-height:140px;border:1px solid #eee;padding:4px;border-radius:8px;" />
        }
        else
        {
            <span style="color:#888">Görsel eklenmemiş.</span>
        }
    </div>

    <!-- Yeni görsel yükle -->
    <div class="mb-3">
        <label class="form-label">Yeni Görsel Yükle</label>
        <input type="file" name="image" accept="image/*" class="form-control" />
        <div class="form-text">Seçerseniz kaydedince mevcut görselin yerine geçer.</div>
    </div>

    <!-- İsteğe bağlı URL -->
    <div class="mb-2">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
        <div class="form-text">Dosya seçmezseniz buraya URL girebilirsiniz. Boş bırakabilirsiniz.</div>
    </div>

    <!-- Görseli kaldır -->
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="removeImage" name="removeImage" />
        <label class="form-check-label" for="removeImage">Mevcut resmi kaldır</label>
    </div>

    <div class="mb-2">
        <label asp-for="Kcal"></label>
        <input asp-for="Kcal" type="number" class="form-control" />
        <span asp-validation-for="Kcal" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="IsActive" />
        <label class="form-check-label" for="IsActive">Aktif</label>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
