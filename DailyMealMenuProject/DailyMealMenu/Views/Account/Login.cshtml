@{
    ViewData["Title"] = "Giriş Yap";
    var returnUrl = ViewBag.ReturnUrl as string;
}

<style>
    :root {
        --brand: #00008B;
        --bg: #f6f7fb;
    }

    body {
        background: var(--bg);
        font-family: Arial, sans-serif;
    }

    .login-wrap {
        max-width: 420px;
        margin: 60px auto;
        background: #fff;
        padding: 24px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,.08);
    }

    h2 {
        text-align: center;
        color: var(--brand);
        margin-bottom: 18px;
    }

    label {
        font-weight: bold;
        display: block;
        margin-top: 12px;
    }

    input {
        width: 100%;
        height: 40px;
        border: 1px solid #d1d5db;
        border-radius: 10px;
        padding: 0 12px;
    }

        input:focus {
            outline: none;
            border-color: var(--brand);
            box-shadow: 0 0 0 4px rgba(0,0,139,.15);
        }

    .btn {
        width: 100%;
        margin-top: 18px;
        height: 42px;
        border: 0;
        border-radius: 10px;
        background: var(--brand);
        color: #fff;
        font-weight: 800;
        cursor: pointer;
    }

    .err {
        margin-top: 10px;
        color: #b91c1c;
        font-weight: 700;
    }

    .links {
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
    }

        .links a {
            color: var(--brand);
            text-decoration: none;
        }
</style>

<div class="login-wrap">
    <h2>Giriş Yap</h2>

    @if (ViewBag.Error != null)
    {
        <div class="err">@ViewBag.Error</div>
    }

    <form method="post" asp-action="Login" asp-controller="Account">
        @Html.AntiForgeryToken()

        @if (!string.IsNullOrEmpty(returnUrl))
        {
            <input type="hidden" name="returnUrl" value="@returnUrl" />
        }

        <label for="username">Kullanıcı Adı</label>
        <input id="username" name="username" autocomplete="username" required />

        <label for="password">Şifre</label>
        <input id="password" name="password" type="password" autocomplete="current-password" required />

        <button class="btn" type="submit">Giriş Yap</button>
    </form>

    <div class="links">
        <a href="/">← Ana Sayfa</a>
        <form method="post" asp-action="Logout" asp-controller="Account">
            @Html.AntiForgeryToken()
            <button class="btn" type="submit" style="height:auto; padding:6px 12px; width:auto; background:#6b7280;">Çıkış</button>
        </form>
    </div>
</div>
